{
    "version": 2,
    "functions": {
      "api": {
        "handler": "./src/server.ts",
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/.vercel/functions/api"
      },
      {
        "source": "/(.*)",
        "destination": "/"
      }
    ]
  }